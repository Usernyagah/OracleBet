{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["es2020"],
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./scripts", "./test", "./hardhat.config.ts"],
  "exclude": ["node_modules", "artifacts", "cache"]
}

